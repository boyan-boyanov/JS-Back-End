<section id="deatils-page">
    <div class="wrapper">
        <div class="product-img">
            <img src="{{data.houseImg}}">
        </div>
        <div class="product-info">
            <div class="product-text">
                <div class="product-text">
                    <h1>Name: {{data.name}}</h1>
                    <h2>Type: {{data.type}}</h2>
                    <h4>Year: {{data.year}}</h4>
                    <h4>City: {{data.city}}</h4>
                    <p>{{data.description}}</p>

                    

                    {{#if hasUser}}
                    <!-- if there is no registered user, do not display buttons-->
                    <div class="product-btn">

                        {{#if data.isOwner}}
                        <a href="/edit/{{data._id}}" class="edit">Edit</a>
                        <a href="/delete/{{data._id}}" class="remove">Delete</a>
                        {{else}}
                             {{#if data.pieces}}
                                        {{#if data.isJoined}}
                                         <!-- logged in user with available pieces-->
                                        <p class="alRentHome">You have already rent this home</p>
                                        {{else}}
                                            <a href="/join/{{data._id}}" class="rentHome">Rent a home, available {{data.pieces}} housing</a>

                                        {{/if}}
                                           
                                {{else}}
                                <!-- logged in user with no available pieces-->
                                <p class="no-housing">No Housing Available!</p>
                                {{/if}}
                        {{/if}}
                    </div>
                    {{/if}}
                    {{#if data.tourists}}
                    <!-- if there are already tenants of the housing, separate their names with a comma and a space ", "  -->
                    <p>People rented this housing: {{data.allTouristRentalThisHome}}</p>
                    {{else}}
                    <!-- If not display: -->
                    <p>People rented this housing: There are no tenants yet.</p>
                      {{/if}}
                </div>
            </div>


        </div>
    </div>
</section>